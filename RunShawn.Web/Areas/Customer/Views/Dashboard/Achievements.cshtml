@{
    ViewBag.Title = "Dashboard";
}

<header>
    <h3>Osiągnięcia</h3>
</header>
<div class="achievements-container">
    <div class="single-achievement">
        <div class="icon-container"><i class="far fa-futbol"></i></div>
        <div class="info">
            <h3>Piłka nożna</h3>
            <h2>Nowicjusz</h2>
            <h4>15 grudzień 2018</h4>
        </div>
    </div>
    <div class="single-achievement">
        <div class="icon-container"><i class="fas fa-running"></i></div>
        <div class="info">
            <h3>Bieganie</h3>
            <h2>Sportowiec</h2>
            <h4>14 stycznia 2019</h4>
        </div>
    </div>
    <div class="single-achievement">
        <div class="icon-container"><i class="fas fa-dumbbell"></i></div>
        <div class="info">
            <h3>Bieganie</h3>
            <h2>Weteran</h2>
            <h4>20 lutego 2019</h4>
        </div>
    </div>
    <div class="single-achievement">
        <div class="icon-container"><i class="fas fa-award"></i></div>
        <div class="info">
            <h3>Bieganie</h3>
            <h2>Mistrz</h2>
            <h4>24 mar 2019</h4>
        </div>
    </div>
    @if (Int64.Parse(Html.Action(MVC.Admin.Users.GetScores()).ToString()) >= 6000)
    {

        <div class="single-achievement">
            <div class="icon-container"><i class="fas fa-award"></i></div>
            <div class="info">
                <h3>Bieganie</h3>
                <h2>Nałogowiec</h2>
                <h4></h4>
            </div>
        </div>
    }
    else
    {
        <div class="single-achievement disabled">
            <div class="icon-container"><i class="fas fa-award"></i></div>
            <div class="info">
                <h3>Bieganie</h3>
                <h2>Nałogowiec</h2>
                <h4></h4>
            </div>
        </div>
    }
</div>